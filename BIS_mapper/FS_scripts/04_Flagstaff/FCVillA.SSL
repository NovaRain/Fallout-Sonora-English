procedure map_enter_p_proc begin
   if (is_loading_game == false) then begin
       set_start_home

       if ((global_var(GVAR_VILLA_STATUS_SANCHO) >= 2) or (getQuest(GVAR_FLAGSTAFF_SLAVES_MINE) >= qEnd)) then begin
       rm_timer_event(self_obj);
       set_obj_visibility(self_obj, 1);
       destroy_object(self_obj);
       end
   end
end

procedure map_update_p_proc begin
   if (getQuest(GVAR_FLAGSTAFF_CAVEVILLA) >= qEnd) then begin
       if (global_var(GVAR_VILLA_STATUS_SANCHO) < 2) then begin
       exp_add(250);
       set_REP(2)
       display_mstr(105);
       set_obj_visibility(self_obj, 1);
       set_global_var(GVAR_VILLA_STATUS_SANCHO, 2);
       // set this to get rid of marauders if Sancho or Hugo return to plantation - cambragol
       if (getQuest(GVAR_VILLA_MARAUDERS_RUN) <= 1) then begin
         set_global_var(GVAR_VILLA_MARAUDERS_RUN, 10);
       end
       destroy_object(self_obj);
       end
   end
end

