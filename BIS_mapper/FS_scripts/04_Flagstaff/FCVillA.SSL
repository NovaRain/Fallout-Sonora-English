procedure NodeStartDialog begin
   if (cur_map_index == MAP_FLAGSTAFF_CAVE) then begin
      if (getQuest(GVAR_FLAGSTAFF_CAVEVILLA) == qZero) then begin
      call NodeFstDialog;
      end
      else begin
      call NodeSndDialog;
      end
   end
   else begin
      call NodeFinalDialog;
   end
end

