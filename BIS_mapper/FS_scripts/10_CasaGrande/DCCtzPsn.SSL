procedure use_skill_on_p_proc begin
   skillUseSteal
   skillUseFAid
   if (action_being_used == SKILL_DOCTOR) then begin
      if (get_Medic_Quest == 0) then begin
         script_overrides;
         if (has_skill(dude_obj, SKILL_DOCTOR) < 50) then begin
         skill_display_mstr(104,SKILL_DOCTOR,50)
         end
         else begin
         call uninjure_proc;
         end
      end
   end
end

