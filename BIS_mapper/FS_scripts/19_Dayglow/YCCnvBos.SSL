   if (getQuest(GVAR_DAYGLOW_FABRICA_STATUS) == qStart) then begin
   call NodeQuest201;
   end
   else if (partyPidMtn!=0) then begin
   call NodeFstDialog3;
   end
   else if (bitDialog(bit_1) == 0) then begin
   call NodeFstDialog;
   end
   else begin
   call NodeSndDialog;
   end
end

