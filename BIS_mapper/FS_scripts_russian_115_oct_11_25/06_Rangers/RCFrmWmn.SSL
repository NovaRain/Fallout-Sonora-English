procedure NodeStartDialog begin
   if (bitDialog(bit_1) == 0) then begin
   call NodeFstDialog;
   end
   else if ((getQuest(GVAR_RANGERS_DUMB_DESTROY) >= qEnd) or town_rep_is_hated or (getReaction <= -15)) then begin
   call NodeSndDialog2;
   end
   else begin
   call NodeSndDialog;
   end
end

