      floater(self_obj,112,COLOR_MSG_RED);
      self_attack_dude;
      end
      else if (local_var(LVAR_Weapon_Timer) >= (ONE_GAME_SECOND*2)*6) then begin
      floater(self_obj,111,COLOR_MSG_RED);
      end
      else begin
      floater(self_obj,110,COLOR_MSG_RED);
      end
      end
   end
   inc_local_var(LVAR_Weapon_Timer);
end

