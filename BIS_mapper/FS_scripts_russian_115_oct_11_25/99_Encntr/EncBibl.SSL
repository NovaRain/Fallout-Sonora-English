procedure use_obj_on_p_proc begin
   UsedItemToCrit_Proc
   if (objUsedPid == PID_Q_GLASS_BIBL) then begin
      item_remove(dude_obj,objUsedPid,1)
      move_obj_inven_to_obj(self_obj,dude_obj);
      floater(self_obj,105,COLOR_MSG_GREEN);
      rm_timer_event(self_obj);
      add_timer_event(self_obj, 50, 1);
      add_timer_event(self_obj, 90, 2);
      replyNumber := 150;
      set_local_var(LVAR_Home_Tile,12701);
      set_local_var(LVAR_Flag_A,1);
   end
   if (objUsedPid == PID_GLASSES) then begin
      floater(self_obj,106,COLOR_MSG_NORMAL);
   end
end

