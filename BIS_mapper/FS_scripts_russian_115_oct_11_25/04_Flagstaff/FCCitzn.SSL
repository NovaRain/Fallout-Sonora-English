procedure talk_p_proc begin
   if (game_time_hour <= 0600) then begin
      if (local_var(LVAR_Flag_Street) > 0) then begin
      floater(self_obj,108,COLOR_MSG_RED);
      end
      else begin
      floater(self_obj,103,COLOR_MSG_NORMAL);
