procedure timed_event_p_proc begin
   // Таймер за номером 1 зарезервирован под перемещение персонажа по локации
   // Таймер за номером 2 зарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       if ((getQuest(GVAR_GARAGE_QST_BOSS) == qStart) and (obj_critter_a > 0)) then begin
          if (tile_distance_objs(self_obj,obj_critter_a) > 5) then begin
          timer_move_to_tile(1,tile_num(obj_critter_a),0)
          end
          else begin
          timer_move_to_tile(0,tile_num_in_direction(tile_num(obj_critter_a), random(0,5), random(2,3)),random(0,5))
          end
       end
       else begin
       timer_move_random_home(5)
       end
   end
   if (fixed_param == 2) then begin
       //timer_float_reply(120,121)
   end
end

