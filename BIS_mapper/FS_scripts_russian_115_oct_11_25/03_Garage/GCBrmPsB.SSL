procedure destroy_p_proc begin
   if (global_var(GVAR_GARAGE_STATUS_BRAHMIN) == 0) then begin
   set_global_var(GVAR_GARAGE_STATUS_BRAHMIN,1);
   end
   if (global_var(GVAR_GARAGE_STATUS_PASTUH) > 0) then begin
   set_global_var(GVAR_GARAGE_STATUS_PASTUH,0);
   end
   dec_global_var(GVAR_GARAGE_STATUS_PASTUH);
   kill_critter_opt
end

procedure talk_p_proc begin
   if (global_var(GVAR_GARAGE_STATUS_BRAHMIN) == 0) then begin
   floater(self_obj,110,COLOR_MSG_NORMAL);
   end
   else if (global_var(GVAR_GARAGE_STATUS_BRAHMIN) > 0) then begin
   floater(self_obj,111,COLOR_MSG_RED);
   end
   else begin
   floater(self_obj,112,COLOR_MSG_RED);
   end
end
