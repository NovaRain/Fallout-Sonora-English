       set_obj_visibility(self_obj, 1);
       end
       if (cur_map_index == MAP_DAYGLOW_CITYHEART) then begin
       set_obj_visibility(self_obj, 1);
       end
   end
end

procedure look_at_p_proc begin
   script_overrides;
   if (self_PID == PID_LA_FANTASMA) then begin
   display_mstr(109);
   end
   else if (self_PID == PID_EL_TEMOR_ROJO) then begin
   display_mstr(108);
   end
   else if (self_PID == PID_LA_GARRA) then begin
   display_mstr(104);
   end
   else if (self_PID == PID_EL_DIABLO) then begin
   display_mstr(103);
   end
   else if (self_PID == PID_EL_GIGANTO) then begin
   display_mstr(102);
   end
   else if (self_PID == PID_EL_MONSTRO) then begin
   display_mstr(101);
   end
   else begin
   display_mstr(100);
   end
end

procedure timed_event_p_proc begin
   // Таймер за номером 1 рарезервирован под перемещение персонажа по локации
   // Таймер за номером 2 рарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       if (self_visible == false) then begin
          add_timer_event(self_obj, 40, 1);
       end
       else if ((cur_map_index == MAP_SANTA_ANA_PLAZA) and (map_var(MVAR_SANTA_MEAT_TILE) > 0)) then begin
          timer_move_to_tile(0,map_var(MVAR_SANTA_MEAT_TILE),random(0,5))
          if (combat_is_initialized == false) then begin
             floater(self_obj, 107, COLOR_MSG_GREY);
          end
          if (tile_distance(self_tile,map_var(MVAR_SANTA_MEAT_TILE)) <= 1) then begin
             if (tile_contains_obj_pid(map_var(MVAR_SANTA_MEAT_TILE), self_elevation, PID_M_MEAT_JERKY) == true) then begin
             destroy_object(tile_contains_pid_obj(map_var(MVAR_SANTA_MEAT_TILE), self_elevation, PID_M_MEAT_JERKY));
             end
             if (tile_contains_obj_pid(map_var(MVAR_SANTA_MEAT_TILE), self_elevation, PID_M_IGUANA) == true) then begin
             destroy_object(tile_contains_pid_obj(map_var(MVAR_SANTA_MEAT_TILE), self_elevation, PID_M_IGUANA));
             end
            set_map_var(MVAR_SANTA_MEAT_TILE, 0);
          end
       end
       else if ((cur_map_index == MAP_CASA_NUEVA_CEMENT) and (map_var(MVAR_NUEVA_MEAT_TILE) > 0)) then begin
          timer_move_to_tile(0,map_var(MVAR_NUEVA_MEAT_TILE),random(0,5))
          if (combat_is_initialized == false) then begin
             floater(self_obj, 107, COLOR_MSG_GREY);
          end
          if (tile_distance(self_tile,map_var(MVAR_NUEVA_MEAT_TILE)) <= 1) then begin
             if (tile_contains_obj_pid(map_var(MVAR_NUEVA_MEAT_TILE), 0, PID_M_MEAT_JERKY) == true) then begin
             destroy_object(tile_contains_pid_obj(map_var(MVAR_NUEVA_MEAT_TILE), 0, PID_M_MEAT_JERKY));
             end
             if (tile_contains_obj_pid(map_var(MVAR_NUEVA_MEAT_TILE), 0, PID_M_IGUANA) == true) then begin
             destroy_object(tile_contains_pid_obj(map_var(MVAR_NUEVA_MEAT_TILE), 0, PID_M_IGUANA));
             end
             set_map_var(MVAR_NUEVA_MEAT_TILE, 0);
          end
       end
       else if ((cur_map_index == MAP_DAYGLOW_CITYHEART) and (map_var(MVAR_DIEGOHEART_MEAT_HEX) > 0)) then begin
          timer_move_to_tile(0,map_var(MVAR_DIEGOHEART_MEAT_HEX),random(0,5))
          if (combat_is_initialized == false) then begin
             floater(self_obj, 107, COLOR_MSG_GREY);
          end
          if (tile_distance(self_tile,map_var(MVAR_DIEGOHEART_MEAT_HEX)) <= 1) then begin
             if (tile_contains_obj_pid(map_var(MVAR_DIEGOHEART_MEAT_HEX), self_elevation, PID_M_MEAT_JERKY) == true) then begin
             destroy_object(tile_contains_pid_obj(map_var(MVAR_DIEGOHEART_MEAT_HEX), self_elevation, PID_M_MEAT_JERKY));
             end
             if (tile_contains_obj_pid(map_var(MVAR_DIEGOHEART_MEAT_HEX), self_elevation, PID_M_IGUANA) == true) then begin
             destroy_object(tile_contains_pid_obj(map_var(MVAR_DIEGOHEART_MEAT_HEX), self_elevation, PID_M_IGUANA));
             end
             set_map_var(MVAR_DIEGOHEART_MEAT_HEX, 0);
          end
       end
       else begin
          timer_move_random
       end
   end
   if (fixed_param == 2) then begin
       //timer_float_reply(120,121)
   end
end

procedure critter_p_proc begin
   invisToDude(12,105)

   if (cur_map_index == MAP_DAYGLOW_CITYHEART) then begin
   if (map_var(MVAR_DIEGOHEART_DWCL_VISBL) > 0) then begin
   if (self_visible == false) then begin
       set_obj_visibility(self_obj, 0);
   end
   end
   end

   if (cur_map_index == MAP_SAN_BRAHMIN_CAVE) then begin
   obj_critter_a := self_obj;
   end
   set_critter_options(2,0) //условие нападения (0 личная вражда, 1 вражда клановая, 2 всегда), разворот к ГГ
end

