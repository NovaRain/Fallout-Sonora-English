procedure talk_p_proc begin
   if (local_var(LVAR_BoozUse) < 210) then begin
      inc_local_var(LVAR_BoozUse);
      if (local_var(LVAR_BoozUse) < 200) then begin
      set_local_var(LVAR_BoozUse,200);
      end
      if ((local_var(LVAR_BoozUse) > 202) and (local_var(LVAR_BoozUse) < 210)) then begin
      set_local_var(LVAR_BoozUse,202);
      end

      z_floater(self_obj, local_var(LVAR_BoozUse), COLOR_MSG_NORMAL);
   end
   else begin
      floater(self_obj, local_var(LVAR_BoozUse), COLOR_MSG_NORMAL);
   end
end
