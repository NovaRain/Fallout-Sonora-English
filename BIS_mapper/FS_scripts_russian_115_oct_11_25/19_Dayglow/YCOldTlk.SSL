procedure use_obj_on_p_proc begin
   UsedItemToCrit_Proc
   if (itemTypeUseDude == 2) then begin
      inc_local_var(LVAR_BoozUse);
      if (local_var(LVAR_BoozUse) < 210) then begin
      set_local_var(LVAR_BoozUse,210);
      end
      if (local_var(LVAR_BoozUse) > 215) then begin
      set_local_var(LVAR_BoozUse,215);
      end

      floater(self_obj, local_var(LVAR_BoozUse), COLOR_MSG_NORMAL);

      exp_add(65);
   end
end

