procedure talk_p_proc begin
   setReaction(0) // отношение к ГГ (персонаж: 1 положительный, 0 нейтральный, -1 отрицательный)
   fracReaction(GVAR_TITUL_REBIRTH,-10) // поправка к отношению за принадлежность к фракции

   if (getQuest(GVAR_DAYGLOW_QST_BANDITS) >= 20) then begin
   floater(self_obj, 103, COLOR_MSG_NORMAL);
   end
   else if (getQuest(GVAR_DAYGLOW_QST_BANDITS) == qStart) then begin
   dialog_proc(0,0,NodeStartDialog,-1,-1)
   end
   else begin
   floater(self_obj, 102, COLOR_MSG_RED);
   end
end

