end

procedure NodeDialog3 begin
   if (who_carry_amount(dude_obj) <= 100) then begin
   partyRemoveAll // !!! тщательно проверить
   add_timer_event(self_obj, 2, 1);
   call Node999;
   end
   else begin
   display_mstr(117);
   end
end
