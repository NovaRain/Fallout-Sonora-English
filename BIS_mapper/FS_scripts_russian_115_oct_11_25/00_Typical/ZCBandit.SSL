procedure timed_event_p_proc begin
   // “аймер за номером 1 зарезервирован под перемещение персонажа по локации
   // “аймер за номером 2 зарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       if ((cur_map_index == MAP_BOS_CAMP_C) and (map_var(MVAR_PUERTO_CAMP_RADIO)>0) and (tile_distance(self_tile,map_var(MVAR_PUERTO_CAMP_RADIO)) <= 17)) then begin
          timer_move_random_tile(map_var(MVAR_PUERTO_CAMP_RADIO),3)
       end
       else if (local_var(LVAR_Tile_B) < 0) then begin
          timer_move_to_home
       end
       else if (local_var(LVAR_Tile_B) > 0) then begin
          timer_move_patrol(HomeTile,local_var(LVAR_Tile_B))
       end
       else if (tile_distance(self_tile,20071) <= 15) then begin
          timer_move_random_home(2)
       end
       else begin
          timer_move_random
       end
   end
   if (fixed_param == 2) then begin
       if ((cur_map_index == MAP_BOS_CAMP_A) and (local_var(LVAR_Tile_B) == -998)) then begin
          if DudeTraitHas(TRAIT_espanol) then begin
          timer_float_reply(110,123)
          end
          else begin
          timer_float_reply(130,135)
          end
       end
   end
end

