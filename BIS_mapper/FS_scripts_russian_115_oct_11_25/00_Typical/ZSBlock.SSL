procedure use_skill_on_p_proc begin
   if (action_being_used == SKILL_REPAIR) then begin
      script_overrides;
      if (has_skill(dude_obj, SKILL_REPAIR) >= 50) then begin
         play_sfx("WH21FXX1");
         play_sfx("PEBBLE");
      call destroy_proc;
      end
      else begin
         skill_display_mstr(123,SKILL_REPAIR,50)
      end
   end
   else begin
      script_overrides;
      display_mstr(120);
   end
end

