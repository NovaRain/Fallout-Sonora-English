procedure uninjure_proc begin
   if (get_Medic_Quest == 0) then begin
      PLAY_FADE
      inc_map_var(MVAR_OIL_PLATFORM_POISON);
      /*
      if (local_var(LVAR_Medic_Lvl)>0) then begin
      exp_add(local_var(LVAR_Medic_Lvl)*3);
      end
      */
      display_msg(mstr(105)+map_var(MVAR_OIL_PLATFORM_POISON)+mstr(106));
      floater(self_obj, 107, COLOR_MSG_GREEN);
      set_Medic_Quest;
   end
end

procedure talk_p_proc begin
   if (get_Medic_Quest == 0) then begin
      if town_rep_is_hated then begin
      floater(self_obj, 121, COLOR_MSG_RED);
      end
      else begin
      floater(self_obj, 120, COLOR_MSG_RED);
      end
   end
   else begin
      floatOilGhoulsAttak
      else if town_rep_is_hated then begin
      floater(self_obj, 123, COLOR_MSG_NORMAL);
      end
      else begin
      floater(self_obj, 122, COLOR_MSG_NORMAL);
      end
   end
end
