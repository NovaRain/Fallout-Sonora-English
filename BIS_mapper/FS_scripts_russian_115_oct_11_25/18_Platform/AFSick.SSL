procedure use_obj_on_p_proc begin
   UsedItemToCrit_Proc
   if (objUsedPid == PID_M_ANTIDOTE) then begin
      if (get_Medic_Quest == 0) then begin
      //script_overrides;
      call uninjure_proc;
      end
   end
end

