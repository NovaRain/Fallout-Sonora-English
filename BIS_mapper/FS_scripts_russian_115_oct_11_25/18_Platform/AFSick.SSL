   set_critter_options(1,0) //условие нападения (0 личная вражда, 1 вражда клановая, 2 всегда), разворот к ГГ
end

procedure use_skill_on_p_proc begin
   skillUseSteal
   skillUseFAid
   if (action_being_used == SKILL_DOCTOR) then begin
      if (get_Medic_Quest == 0) then begin
         script_overrides;
         if (has_skill(dude_obj, SKILL_DOCTOR) < local_var(LVAR_Medic_Lvl)) then begin
         skill_display_mstr(104,SKILL_DOCTOR,local_var(LVAR_Medic_Lvl))
         end
         else begin
         call uninjure_proc;
         end
      end
   end
end

