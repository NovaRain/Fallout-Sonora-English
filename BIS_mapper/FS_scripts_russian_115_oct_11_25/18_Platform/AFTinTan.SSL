procedure NodeStartDialog begin
   if (bitDialog(bit_2) == 0) then begin
      if (bitDialog(bit_1) == 0) then begin
      call NodeFstDialog1;
      end
      else begin
      call NodeFstDialog2;
      end
   end
   else if ((bitDialog(bit_3) == 0) and (getQuest(GVAR_OIL_PLATFORM_STATUS) >= qStart)) then begin
      call NodeFstDialog3;
   end
   else begin
      call NodeSndDialog;
   end
end

