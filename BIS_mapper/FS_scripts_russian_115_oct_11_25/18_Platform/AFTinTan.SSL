   else if (map_var(MVAR_OIL_PLATFORM_KILL_B) >= 10) then begin
   floater(self_obj, 102, COLOR_MSG_RED);
   end
   else if (getQuest(GVAR_OIL_PLATFORM_QST_KILL) >= qEnd) then begin
   floater(self_obj, 102, COLOR_MSG_RED);
   end
   else begin
   dialog_proc(0,0,NodeStartDialog,-1,-1)
   end
end

