procedure NodeStartDialog begin
   if (getQuest(GVAR_OIL_PLATFORM_QST_GOLD) >= qEnd) then begin
      if (bitDialog(bit_1) == 0) then begin
      bitDialogExp(bit_1,0)
      end
   end

   if (bitDialog(bit_1) == 0) then begin
      if DudePerkHas(PERK_ghouling_fiziology) then begin
      call NodeFstDialog1;
      end
      else begin
      call NodeFstDialog;
      end
   end
   else begin
      call NodeSndDialog;
   end
end

