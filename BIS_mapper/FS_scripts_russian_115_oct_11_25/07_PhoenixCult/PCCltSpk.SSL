procedure timed_event_p_proc begin
   // Таймер за номером 1 зарезервирован под перемещение персонажа по локации
   // Таймер за номером 2 зарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       timer_move_to_home
   end
   if (fixed_param == 2) then begin
       if (map_var(MVAR_PNX_CULT_MAP_SOLAR) > 0) then begin
       set_local_var(LVAR_Float_Msg,0);
       timer_float_reply(110,113)
       end
       else begin
       if ((local_var(LVAR_Float_Msg) < 120) or (local_var(LVAR_Float_Msg) > 137)) then begin
       set_local_var(LVAR_Float_Msg,120);
       end

       timer_floater(local_var(LVAR_Float_Msg),local_var(LVAR_Float_Msg),COLOR_MSG_NORMAL,100)
       inc_local_var(LVAR_Float_Msg);
       end
   end
end

