procedure timed_event_p_proc begin
   // Таймер за номером 1 рарезервирован под перемещение персонажа по локации
   // Таймер за номером 2 рарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       timer_move_to_home
   end
   if (fixed_param == 2) then begin
       call replyfloat_proc;
       timer_float_reply(replyFloat,replyFloat)
   end
end

procedure replyfloat_proc begin
   replyFloat := 0;
   replyFloat := (random(0,6)*3)+110;

       if (replyFloat == 110) then begin
           if (getQuest(GVAR_PUERTO_BOS_DESTROY) >= qEnd) then begin
           replyFloat += 1;
           end
           else if (global_var(GVAR_TWOSUN_STATUS_ZAX) <0) then begin
           replyFloat += 2;
           end
       end

       if (replyFloat == 113) then begin
           if (global_var(GVAR_NUEVA_USING_INSECTICIDES) != 0) then begin
           replyFloat += 1;
           end
           else if (getQuest(GVAR_PUERTO_BOS_DESTROY) >= qEnd) then begin
           replyFloat += 2;
           end
       end

       if (replyFloat == 116) then begin
           if (getQuest(GVAR_RAIDER_OIL_DESTROY) >= qEnd) then begin
           replyFloat += 1;
           end
           else if (global_var(GVAR_TITUL_WARRIOR_ROAD) >0) then begin
           replyFloat += 2;
           end
       end

       if (replyFloat == 119) then begin
           if (getQuest(GVAR_PHENIX_CULT_DESTROY) >= qEnd) then begin
           replyFloat += 1;
           end
           else if (global_var(GVAR_TITUL_PHENIX_CULT) >0) then begin
           replyFloat += 2;
           end
       end

       if (replyFloat == 122) then begin
           if (getQuest(GVAR_FLAGSTAFF_MINES_DESTROY) >= qEnd) then begin
           replyFloat += 1;
           end
           else if ((getQuest(GVAR_FLAGSTAFF_ROBOT_REPAIR) >= qEnd) and (getQuest(GVAR_FLAGSTAFF_RAT_KING_QST) == qEnd) and (global_var(GVAR_STATUS_FLAGSTAFF_FABER) >= 0)) then begin
           replyFloat += 2;
           end
       end

       if (replyFloat == 125) then begin
           if (global_var(GVAR_TWOSUN_STATUS_ZAX) >0) then begin
           replyFloat += 1;
           end
           else if (global_var(GVAR_TWOSUN_STATUS_ZAX) <0) then begin
           replyFloat += 2;
           end
       end

       if (replyFloat == 128) then begin
           replyFloat += random(0,2);
       end

       if (replyFloat == 131) then begin
           replyFloat += random(0,2);
       end
end

