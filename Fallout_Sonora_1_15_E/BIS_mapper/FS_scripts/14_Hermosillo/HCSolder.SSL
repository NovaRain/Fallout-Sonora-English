procedure timed_event_p_proc begin
   // Таймер за номером 1 зарезервирован под перемещение персонажа по локации
   // Таймер за номером 2 зарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       if (local_var(LVAR_Tile_B) > 0) then begin
       timer_move_patrol(HomeTile,local_var(LVAR_Tile_B))
       end
       else if ((map_var(MVAR_HERMO_ALARM_A) > 0) and (cur_map_index == MAP_HERMO_CASA)) then begin
       timer_move_random_tile(20304,8)
       end
       else begin
       timer_move_to_home
       end
   end
   if (fixed_param == 2) then begin
       //timer_float_reply(120,121)
   end
end

procedure critter_p_proc begin
   variable attakParam;
   attakParam := global_var(GVAR_HERMO_DUDE_ALARM);

   if ((armor_pid_dude_var == PID_ARMOR_COMBAT_MEX) and (tile_distance(dude_tile, self_tile) > 1)) then begin
   attakParam := 0;
   end

   set_critter_options(attakParam,0) //условие нападения (0 личная вражда, 1 вражда клановая, 2 всегда), разворот к ГГ
end

