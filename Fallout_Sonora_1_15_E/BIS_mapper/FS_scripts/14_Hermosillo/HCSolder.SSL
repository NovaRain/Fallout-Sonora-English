procedure talk_p_proc begin
   if (armor_pid_dude_var == PID_ARMOR_COMBAT_MEX) then begin
      // added to make proper use of espanol trait - cambragol
      if DudeTraitHas(TRAIT_espanol) then begin
      floater(self_obj,105,COLOR_MSG_RED);
      end
      else begin
      floater(self_obj,104,COLOR_MSG_RED);
      end
   end
   else begin
      // added to make proper use of espanol trait - cambragol
      if DudeTraitHas(TRAIT_espanol) then begin
      floater(self_obj,103,COLOR_MSG_RED);
      end
      else begin
      floater(self_obj,102,COLOR_MSG_RED);
      end
   end
end
