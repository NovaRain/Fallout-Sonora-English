procedure NodeStartDialog begin
   if (global_var(GVAR_DAYGLOW_MARIACHI_A) == 0) then begin
      if (cur_map_index != MAP_DAYGLOW_BONITA_DUM) then begin
      call NodeFstDialog5;
      end
      else begin
      call NodeFstDialog;
      end
   end
   else begin
      if (cur_map_index == MAP_DAYGLOW_CAMP_OLD_TOWN) then begin
      call NodeSndDialog2;
      end
      else begin
      call NodeSndDialog;
      end
   end
end

