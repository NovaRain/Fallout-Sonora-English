procedure NodeStartDialog begin
   if (gvar_bit(GVAR_ENCOUNTERS_FLAGS_BIT,bit_4) !=0) then begin
      call NodeStopDialog;
   end
   else if (global_var(GVAR_VAULT27_STATUS_MERC) != 0) then begin
      call NodeStopDialog;
   end
   else if (getQuest(GVAR_VAULT27_QST_MERC) < qStart) then begin
       call NodeFstDialog;
   end
   else if (getQuest(GVAR_VAULT27_QST_MERC) < qEnd) then begin
       call NodeSndDialog;
   end
   else begin
       call NodeStopDialog;
   end
end

