   if (fixed_param == 1) then begin
       if (cur_map_index == MAP_HERMO_RANCHO) then begin
       timer_move_random_home(5)
       end
       else begin
       timer_move_random
       end
   end
   if (fixed_param == 2) then begin
       //timer_float_reply(120,121)
   end
end

