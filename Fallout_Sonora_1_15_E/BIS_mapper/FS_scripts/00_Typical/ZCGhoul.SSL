procedure map_enter_p_proc begin
   if (is_loading_game == false) then begin
       set_obj_visibility(self_obj, 0);
       set_start_home
       if (map_first_run) then begin
       call loot_gener;
       end

       if (cur_map_index == MAP_RANGERS_QUARTZ) then begin
       critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_AI_PACKET,AI_GHOUL_ZOMBIE);
       end

       //--- Реакция потрошителей Инферно на мутаген
       if ((cur_map_index == MAP_INFIERNO_CHURCH) and (map_var(MVAR_INF_TOTEM_A)!=0)) then begin
       set_local_var(LVAR_Flags,0);
       set_local_var(LVAR_Self_Flags,0);
       end
       if ((cur_map_index == MAP_INFIERNO_POLICE) and (map_var(MVAR_INF_TOTEM_B)!=0)) then begin
       set_local_var(LVAR_Flags,0);
       set_local_var(LVAR_Self_Flags,0);
       end
       if ((cur_map_index == MAP_INFIERNO_SHOP) and (map_var(MVAR_INF_TOTEM_C)!=0)) then begin
       set_local_var(LVAR_Flags,0);
       set_local_var(LVAR_Self_Flags,0);
       end
       if ((cur_map_index == MAP_INFIERNO_CITY) and (map_var(MVAR_INF_TOTEM_D)!=0)) then begin
       set_local_var(LVAR_Flags,0);
       set_local_var(LVAR_Self_Flags,0);
       end
       if ((cur_map_index == MAP_INFIERNO_MONUMENT) and (global_var(GVAR_INF_TOTEM_MUTAGEN)>=5)) then begin
       set_local_var(LVAR_Flags,0);
       set_local_var(LVAR_Self_Flags,0);
       end

       //--- Судьба потрошителей Инферно после финала игры
       if (global_var(GVAR_GAME_END)>0) then begin
       if ((global_var(GVAR_ENDGAME_INFERNO) == 3) or (global_var(GVAR_ENDGAME_INFERNO) == 4)) then begin
          if (cur_map_index == MAP_INFIERNO_CHURCH) then begin
             rm_timer_event(self_obj);
             set_obj_visibility(self_obj, 1);
          end
          if (cur_map_index == MAP_INFIERNO_POLICE) then begin
             rm_timer_event(self_obj);
             set_obj_visibility(self_obj, 1);
          end
          if (cur_map_index == MAP_INFIERNO_SHOP) then begin
             rm_timer_event(self_obj);
             set_obj_visibility(self_obj, 1);
          end
          if (cur_map_index == MAP_INFIERNO_CITY) then begin
             rm_timer_event(self_obj);
             set_obj_visibility(self_obj, 1);
          end
          if (cur_map_index == MAP_INFIERNO_MONUMENT) then begin
             rm_timer_event(self_obj);
             set_obj_visibility(self_obj, 1);
          end
       end
       end

   end
end

