procedure timed_event_p_proc begin
   // Таймер за номером 1 рарезервирован под перемещение персонажа по локации
   // Таймер за номером 2 рарезервирован под всплывающие реплики
   if (fixed_param == 1) then begin
       if (cur_map_index == MAP_INFIERNO_ROAD) then begin
       timer_move_to_home
       end
       else if ((cur_map_index == MAP_INFIERNO_CITY) and (map_var(MVAR_INF_MUSIC_PLAY)>0)) then begin
       timer_move_random_tile(map_var(MVAR_INF_MUSIC_PLAY),5)
       end
       else if ((cur_map_index == MAP_INFIERNO_SHOP) and (map_var(MVAR_INF_FAIR_SIGNAL)>0)) then begin
       timer_move_random_tile(map_var(MVAR_INF_FAIR_SIGNAL),7)
       end
       else begin
       timer_move_random_home(5)
       end
   end
   if (fixed_param == 2) then begin
       //timer_float_reply(120,121)
   end
end

