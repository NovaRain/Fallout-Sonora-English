procedure map_enter_p_proc begin
   if (is_loading_game == false) then begin
       set_local_var(LVAR_Game_Status,random(1,5));
       set_start_home
       if (map_first_run) then begin
       item_add(self_obj,PID_POKER_FISH,random(3,25))
       end
   end
end

