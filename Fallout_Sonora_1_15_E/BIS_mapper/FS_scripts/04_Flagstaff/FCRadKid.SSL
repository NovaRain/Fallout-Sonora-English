         script_overrides;
         display_mstr(117);
         floater(dude_obj,118,COLOR_MSG_NORMAL);
         item_remove(dude_obj, objUsedPid, 1)
         inc_local_var_amt(LVAR_RadAway_Using,20);
      end
   end
end

