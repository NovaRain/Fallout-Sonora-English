procedure repair_proc begin

   // fixed to include original intent of fade in and out, without the 'can't repair that' message -cambragol
   gfade_out(ONE_GAME_SECOND);
   game_time_advance(ONE_GAME_HOUR*5);
   gfade_in(ONE_GAME_SECOND);
   //PLAY_FADE
   //game_time_advance(ONE_GAME_HOUR*5); -- из-за проигрыша времени почему-то вылазит фраза "Ремонту не подлежит". Похоже на конфликт скрипта с движком.
   script_overrides;
   RepairProcRepair(112,500,"FIXSTILL")
   call repair_start;
end

procedure repair_start begin
      reg_anim_begin();
      reg_anim_animate_forever(self_obj, ANIM_stand);
      reg_anim_end();
      add_timer_event(self_obj, 3, 1);
      obj_set_light_level(self_obj, 100, 8);
      display_mstr(113);
      set_global_var(GVAR_FLAGSTAFF_ROBOT_STATUS,1);
end
