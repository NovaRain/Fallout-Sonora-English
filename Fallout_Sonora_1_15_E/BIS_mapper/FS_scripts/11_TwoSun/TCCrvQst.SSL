procedure NodeStartDialog begin
   if (getQuest(GVAR_TWOSUN_QST_POMPA) == qEnd) then begin
   call NodeSndDialog4;
   end
   else if (global_var(GVAR_TWOSUN_STATUS_ZAX) > 0) then begin
   call NodeSndDialog2;
   end
   else if (bitDialog(bit_1) == 0) then begin
   call NodeFstDialog;
   end
   else begin
   call NodeSndDialog;
   end
end

