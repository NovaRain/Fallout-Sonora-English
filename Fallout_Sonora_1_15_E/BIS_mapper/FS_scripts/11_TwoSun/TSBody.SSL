   Reply(200)
   NAnswer(201,1,NodeDialog2)
end

procedure NodeDialog2 begin
   Reply(202)
   NAnswer(203,1,NodeDialog3)
   NAnswer(204,1,Node999)
end

procedure NodeDialog3 begin
   add_timer_event(self_obj, 2, 1);
   call Node999;
end
