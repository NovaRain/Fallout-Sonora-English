         exp_add(2500);
         end
         else begin
         exp_add(3500);
         end
         display_mstr(105);
         gfade_in(ONE_GAME_SECOND);
      end
      else if (global_var(GVAR_TWOSUN_STATUS_ZAX) < 0) then begin
         display_mstr(104);
      end
      else begin
         display_mstr(103);
      end

      item_remove(dude_obj, PID_KEY_ZAX, 2)
